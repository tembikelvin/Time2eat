# Time2Eat Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=time2eat
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Application Settings
APP_NAME="Time2Eat"
APP_URL=http://localhost/Time2Eat
APP_ENV=development
APP_DEBUG=true

# Security
APP_KEY=your-secret-key-here-change-this
JWT_SECRET=your-jwt-secret-key-here

# Map API Configuration
MAP_API_KEY=your-google-maps-api-key
MAP_PROVIDER=google
# Alternative: openstreetmap

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Mobile Money Configuration (Cameroon)
MTN_MOMO_API_KEY=your_mtn_momo_api_key
ORANGE_MONEY_API_KEY=your_orange_money_api_key

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@time2eat.com
MAIL_FROM_NAME="Time2Eat"

# SMS Configuration (Twilio)
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# Push Notifications (OneSignal)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# File Upload Settings
MAX_FILE_SIZE=5242880
# 5MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif

# Affiliate Settings
DEFAULT_AFFILIATE_RATE=0.05
# 5% default commission
WITHDRAWAL_THRESHOLD=10000
# 10,000 XAF minimum withdrawal

# Delivery Settings
BASE_DELIVERY_FEE=500
# 500 XAF base fee
DELIVERY_FEE_PER_KM=100
# 100 XAF per kilometer

# Cache Settings
CACHE_ENABLED=true
CACHE_DURATION=3600
# 1 hour in seconds

# Session Settings
SESSION_LIFETIME=7200
# 2 hours in seconds
SESSION_SECURE=false
# Set to true for HTTPS

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=900
# 15 minutes in seconds

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_SANDBOX=true

# Tranzak Configuration (Cameroon Mobile Money)
TRANZAK_API_KEY=your_tranzak_api_key
TRANZAK_API_SECRET=your_tranzak_api_secret
TRANZAK_SANDBOX=true

# Orange Money Configuration
ORANGE_MONEY_MERCHANT_KEY=your_orange_money_merchant_key
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/cm/v1
ORANGE_MONEY_SANDBOX=true

# MTN Mobile Money Configuration
MTN_MOMO_API_KEY=your_mtn_momo_api_key
MTN_MOMO_API_SECRET=your_mtn_momo_api_secret
MTN_MOMO_SANDBOX=true

# Encryption Key for Payment Methods (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_here
